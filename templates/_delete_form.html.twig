<form method="post" action="{{ path(entity ~ "_delete", {'id':entity_id}) }}" style="display: inline;" onsubmit="return confirm('Are you sure you want to delete this item?');">
    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ entity_id) }}">
    <a href="#" class="btn-submit"><i class="glyphicon glyphicon-remove-circle"></i></a>
</form>