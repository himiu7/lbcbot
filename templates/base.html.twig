<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8" />
    <title>{% block title %}Welcome!{% endblock %}</title>
    {% block stylesheets %}
        <link rel="stylesheet" href="{{ asset('build/global.css') }}" />
        <link rel="stylesheet" href="{{ asset('build/app.css') }}" />
    {% endblock %}
</head>
<body>
    <nav class="navbar navbar-default navbar-static-top">
        <div id="navbar" class="collapse navbar-collapse pull-right">
            <ul class="nav navbar-nav">
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li><a href="{{ path("dashboard") }}">Главная</a></li>
                    <li><a href="{{ path("profile_index") }}">Профайлы</a></li>
                    <li><a href="{{ path("pb_pay_pb") }}">ПриватБанк</a></li>
                    <li>
                        <a href="{{ path('fos_user_security_logout') }}">Выйти</a>
                    </li>
                {% else %}
                    <li class="active"><a href="{{ path('fos_user_security_login') }}">Войти</a></li>
                {% endif %}
            </ul>
        </div>
    </nav>
{% block body %}{% endblock %}
{% block javascripts %}
    <script src="{{ asset('build/app.js') }}"></script>
{% endblock %}
</body>
</html>